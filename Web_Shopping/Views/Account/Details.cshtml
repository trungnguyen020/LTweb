@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Chi tiết đơn hàng";
    decimal Total = 0;
    decimal Subtotal = 0;
}

<h3>Chi tiết đơn hàng của bạn</h3>
<hr />

<div>
    <strong>Trạng thái: </strong>
    @{
        int currentStatus = (int)ViewBag.OrderStatus;
    }
    @if (currentStatus == 1)
    {
        <span class="text-success">Đơn hàng mới</span>
    }
    else if (currentStatus == 0)
    {

        <span class="text-primary">Đơn hàng thành công</span>
    }
    else
    {

        <span class="text-danger">Đơn hàng đã hủy</span>
    }
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Sản phẩm</th>
            <th scope="col">Đơn giá</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Subtotal = item.Quantity * item.Price;
            Total += Subtotal;
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Price.ToString("#, ##0 VNĐ")</td>
                <td>@item.Quantity</td>
                <td>@Subtotal.ToString("#, ##0 VNĐ")</td>
            </tr>
        }
        <tr>
            <th colspan="3">Total</th>
            <td>@Total.ToString("#, ##0 VNĐ")</td>
        </tr>
    </tbody>
</table>

<a asp-action="History" asp-controller="Account" class="btn btn-outline-success btn-sm">Quay về</a>