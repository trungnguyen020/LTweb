@model Web_Shopping.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    /* Dùng lại bộ CSS chuẩn */
    .form-control-user {
        border-radius: 50px !important;
        padding: 1.5rem 1.5rem !important;
        height: 50px !important;
        font-size: 14px !important;
        border: 1px solid #d1d3e2 !important;
    }

    .btn-user {
        font-size: 16px !important;
        border-radius: 50px !important;
        padding: 12px 20px !important;
        width: 100% !important;
        font-weight: bold !important;
        background-color: #4e73df !important;
        border: 1px solid #4e73df !important;
        color: white !important;
        margin-top: 20px !important;
        display: block !important;
        transition: all 0.3s;
    }

        .btn-user:hover {
            background-color: #2e59d9 !important;
            transform: scale(1.02);
        }

    .small {
        color: #4e73df !important;
        text-decoration: none !important;
        font-size: 13px !important;
    }

        .small:hover {
            text-decoration: underline !important;
        }

    .text-center {
        text-align: center;
        margin-top: 15px;
    }

    h1 {
        color: #333;
        font-weight: 400;
        margin-bottom: 10px;
        text-align: center;
    }

    p.description {
        text-align: center;
        color: #858796;
        margin-bottom: 30px;
        font-size: 14px;
    }
</style>

<div class="p-5">
    <div class="text-center">
        <h1>Quên mật khẩu?</h1>
        <p class="description">Đừng lo lắng. Hãy nhập email của bạn và mật khẩu mới bên dưới!</p>
    </div>

    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control form-control-user" placeholder="Enter Email Address..." />
            <span asp-validation-for="Email" class="text-danger" style="padding-left: 15px"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="New Password" />
            <span asp-validation-for="Password" class="text-danger" style="padding-left: 15px"></span>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Confirm New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="padding-left: 15px"></span>
        </div>

        <button class="btn btn-user">
            Reset Password
        </button>

    </form>

    <hr style="margin-top: 30px; border-top: 1px solid #eee;">

    <div class="text-center">
        <a class="small" asp-action="Create" asp-controller="Account">Tạo tài khoản mới!</a>
    </div>
</div>

@section Script {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}