@model LoginViewModel
@{
    ViewData["Title"] = "Register";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control" />
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
												
							<button class="btn btn-default">Đăng nhập</button>

							<a asp-action="Create" asp-controller="Account" class="btn btn-success">Đăng ký</a>
						<div style="margin-top: 15px;">
							<a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
						</div>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Script {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}