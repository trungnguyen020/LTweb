@model IEnumerable<SliderModel>
@{
    ViewData["title"] = "Slider Listed";
}
<h3>Danh sách thanh trượt</h3>
<a asp-action="Create" class="btn btn-success btn-sm" asp-controller="Slider">Thêm</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Slider Name</th>
            <th scope="col">Slider Description</th>
            <th scope="col">Slider Slug</th>
            <th scope="col">Slider Status</th>
            <th scope="col">Slider Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>

                <td><img src="~/media/slider/@item.Image" width="100" height="80" /> </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Slider" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Slider" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }


    </tbody>
</table>
