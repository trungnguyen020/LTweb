@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Chi tiết đơn hàng";
    decimal Total = 0;
    decimal Subtotal = 0;

    // Lấy dữ liệu từ ViewBag mà Controller đã gửi
    var orderInfo = ViewBag.Order as Web_Shopping.Models.OrderModels;
    var userInfo = ViewBag.UserProfile as Web_Shopping.Models.AppUserModel;
    int currentStatus = (int)ViewBag.OrderStatus;
}

<h3>Chi tiết đơn hàng: <span style="color: #4e73df;">@orderInfo?.OrderCode</span></h3>
<hr />

<!-- SỬA LỖI LOGIC 1: Hiển thị thông tin giao hàng thông minh -->
<div class="card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin người nhận</h6>
    </div>
    <div class="card-body">
        @if (orderInfo != null)
        {
            <p><strong>Họ tên (Email):</strong> @orderInfo.UserName</p>

            <p>
                <strong>Số điện thoại:</strong>
                @if (orderInfo.PhoneNumber.Contains("Chưa cập nhật") && userInfo != null && !string.IsNullOrEmpty(userInfo.PhoneNumber))
                {
                    <!-- Lấy từ Profile nếu đơn hàng thiếu -->
                    <span class="text-success" style="font-weight:bold;">
                        @userInfo.PhoneNumber
                        <small>(Đã cập nhật từ Profile)</small>
                    </span>
                }
                else
                {
                    <!-- Lấy từ Đơn hàng -->
                    @orderInfo.PhoneNumber
                }
            </p>

            <p>
                <strong>Địa chỉ:</strong>
                @if (orderInfo.Address.Contains("Chưa cập nhật") && userInfo != null && !string.IsNullOrEmpty(userInfo.Address))
                {
                    <!-- Lấy từ Profile nếu đơn hàng thiếu -->
                    <span class="text-success" style="font-weight:bold;">
                        @userInfo.Address
                        <small>(Đã cập nhật từ Profile)</small>
                    </span>
                }
                else
                {
                    <!-- Lấy từ Đơn hàng -->
                    @orderInfo.Address
                }
            </p>
            <p><strong>Ngày đặt:</strong> @orderInfo.CreateDate.ToString("dd/MM/yyyy HH:mm")</p>
        }
    </div>
</div>

<table class="table" id="detail_order">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Subtotal = item.Quantity * item.Price;
            Total += Subtotal;
            <tr>

                <td>#</td>
                <td>@item.Product.Name</td>
                <td>@item.Price.ToString("C")</td> 
                <td>@item.Quantity</td>
                <td>@Subtotal.ToString("C")</td> 
            </tr>
        }
        <tr>
            <th colspan="4">Total</th>
            <td>@Total.ToString("C")</td>
            <td>
                @if (currentStatus == 3)
                {
                    <span class="text-danger font-weight-bold">ĐƠN HÀNG ĐÃ HỦY</span>
                }
                else
                {
                    <!-- SỬA LỖI 2: Thêm 'data-ordercode' vào select -->
                    <select class="form-control select-update-order" data-ordercode="@orderInfo.OrderCode">
                        <option value="1" selected="@(currentStatus == 1)">
                            Đơn hàng mới
                        </option>

                        <option value="0" selected="@(currentStatus == 0)">
                            Đơn hàng đã thanh toán
                        </option>
                    </select>
                }
            </td>
        </tr>
    </tbody>
</table>

<!-- SỬA LỖI 3: Chuyển link "Quay về" ra ngoài bảng -->
<div style="margin-top: 20px;">
    <a asp-action="Index" asp-controller="Order" class="btn btn-outline-success btn-sm">Quay về danh sách</a>
</div>


@section Script {
    <script>
        $(document).ready(function() {
            $('.select-update-order').change(function(){
                var status = $(this).val();

                // SỬA LỖI 2: Lấy ordercode từ 'data-' attribute, không dùng class 'getId'
                var ordercode = $(this).data('ordercode');

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")",
                    data: {status: status, ordercode: ordercode},

                    success: function(result){
                        if(result.success){
                            Swal.fire(
                                'Thành công!',
                                'Cập nhật trạng thái thành công.',
                                'success'
                            ).then(() => {
                                // Tải lại trang để thấy trạng thái "Đã hủy" (nếu chọn Hủy)
                                location.reload();
                            });
                        }
                        else{
                            Swal.fire("Lỗi!", "Cập nhật thất bại.", "error");
                        }
                    },
                });
            });
        });
    </script>
}